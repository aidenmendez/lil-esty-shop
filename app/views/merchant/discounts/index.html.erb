<h1> <%= @merchant.name %> Discounts</h1>
<h2> Current Bulk Discounts</h2>
<section id="create-discount-sec">
  <%= link_to "New Discount", new_merchant_discount_path(@merchant) %>
</section>
<br/>
<% @discounts.each do |d| %>
  <section id="section-<%= d.id %>"">
  <h3><%= link_to "Discount #{d.id}", merchant_discount_path(@merchant.id, d.id) %></h3>
  <%= button_to "Delete", merchant_discount_path(@merchant, d), method: :delete %>
    <ul>
      <li><%= d.percent %></li>
      <li><%= d.threshold %></li>
    </ul>
  </section>
<% end %>
  